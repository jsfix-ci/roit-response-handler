{
    "compilerOptions": {
        "declaration": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist/",
        "node_modules"
    ]
}

